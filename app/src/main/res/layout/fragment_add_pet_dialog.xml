<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:minWidth="300dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm thú cưng"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Tên thú với icon -->
        <EditText
            android:id="@+id/editTextPetName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên thú"
            android:drawableLeft="@drawable/ic_pet_name"
            android:drawablePadding="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text"/>

        <!-- Tên giống với icon -->
        <EditText
            android:id="@+id/editTextPetBreed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên giống"
            android:drawableLeft="@drawable/ic_breed"
            android:drawablePadding="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text"/>

            <!-- Giới tính (RadioGroup) with more padding -->
            <RadioGroup
                android:id="@+id/radioGroupGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/rounded_radiogroup"
                android:padding="8dp"
            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/radioButtonMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đực"
                android:drawableLeft="@drawable/ic_male"
                android:drawablePadding="8dp"
                android:padding="8dp"
            android:layout_marginEnd="8dp" />

            <RadioButton
                android:id="@+id/radioButtonFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cái"
                android:drawableLeft="@drawable/ic_female"
                android:drawablePadding="8dp"
                android:padding="8dp"
            android:layout_marginStart="8dp" />

        </RadioGroup>

        <!-- Ngày sinh with Button inside FrameLayout -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <!-- EditText with padding to avoid text sticking to the border -->
            <EditText
                android:id="@+id/editTextPetBirthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ngày sinh"
                android:drawableLeft="@drawable/ic_dob"
                android:drawablePadding="12dp"
                android:padding="10dp"
            android:background="@drawable/edit_text"/>

            <!-- Button with padding and margin to avoid sticking to the border -->
            <Button
                android:id="@+id/buttonSelectBirthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn ngày sinh"
                android:backgroundTint="#FFC0CB"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="8dp"
            android:elevation="2dp"/>

        </FrameLayout>


    <!-- Màu sắc với icon -->
        <EditText
            android:id="@+id/editTextPetColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Màu sắc"
            android:drawableLeft="@drawable/ic_cl"
            android:drawablePadding="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text"/>

        <!-- Cân nặng với icon -->
        <EditText
            android:id="@+id/editTextPetWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cân nặng (Kg)"
            android:drawableLeft="@drawable/ic_w"
            android:drawablePadding="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text"/>

        <!-- Chiều cao với icon -->
        <EditText
            android:id="@+id/editTextPetHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Chiều cao (Cm)"
            android:drawableLeft="@drawable/ic_h"
            android:drawablePadding="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text"/>

        <!-- Button chọn ảnh -->
        <Button
            android:id="@+id/buttonChooseImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="Chọn ảnh thú"
            android:backgroundTint="#FFC0CB"/>

        <!-- Button thêm thú -->
        <Button
            android:id="@+id/buttonAddPet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FF4263"
            android:text="Thêm thú" />

    </LinearLayout>
</ScrollView>
